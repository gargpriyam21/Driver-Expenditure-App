<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.naman.namanapp.activities.DriverFiles.AddExpenditureActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Enter Expenditure"
            android:textSize="30dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/etgetExpenditure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Amount"
            android:inputType="number"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etgetReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Reason"
            android:inputType="text"
            android:textSize="30dp" />

            <ImageView
                android:id="@+id/ivCamera"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_camera_alt_black_48dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <Button
            android:id="@+id/btnAddExpenditure"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_state"
            android:text="Add"
            android:textSize="30dp" />


    </LinearLayout>


</FrameLayout>
